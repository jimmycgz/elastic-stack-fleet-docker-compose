# Password for the 'elastic' user (at least 6 characters)
ELASTIC_PASSWORD=your_secure_password_here
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_HOST=https://elasticsearch:9200

# Port to expose Elasticsearch HTTP API to the host
# Use 127.0.0.1:9200 for localhost only access
ES_PORT=9200

# Port to expose Kibana to the host
# Use 80 for standard HTTP port
KIBANA_PORT=5601

# Password for the 'kibana_system' user (at least 6 characters)
KIBANA_PASSWORD=your_secure_password_here
KIBANA_FLEET_HOST=https://kibana:5601

# Fleet server configuration
FLEET_PORT=8220
FLEET_HOST=https://fleet-server:8220

# Externally accessible URLs (adjust hostname if not using localhost)
FLEET_URL=https://localhost:8220
ES_URL=https://localhost:9200

# Version of Elastic products
# Check https://www.elastic.co/downloads for latest version
STACK_VERSION=8.15.2

# Set the cluster name
CLUSTER_NAME=docker-cluster

# License type
# Options: trial (14-day trial of premium features)
LICENSE=trial

# Memory limit for Elasticsearch
# Format: number + unit (b, k, m, g)
# Example: 512m, 2g, etc.
MEM_LIMIT=1g

# Project namespace
# This will be used as the prefix for your container names
COMPOSE_PROJECT_NAME=elastic-stack
